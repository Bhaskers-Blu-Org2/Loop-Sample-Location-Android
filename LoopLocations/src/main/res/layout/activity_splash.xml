<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customTextView="https://schemas.android.com/apk/res/com.microsoft.loop.samplelocationsapp.utils"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    tools:ignore="all"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.9"
            android:weightSum="1">

            <ImageView android:id="@+id/splashscreen" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash"
                android:gravity="center"
                android:scaleType="center"
                android:layout_weight="0.5"/>

            <com.microsoft.loop.samplelocationsapp.utils.CustomTextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Your home, work and everywhere else"
                android:textAlignment="center"
                android:layout_gravity="top"
                android:textSize="12sp"
                android:paddingTop="10dp"
                android:textColor="@color/locationvisitdate"
                customTextView:fontName="DroidSansMono"
                android:layout_below="@id/splashscreen"
                android:layout_weight="0.5" />

        </RelativeLayout>
        <com.microsoft.loop.samplelocationsapp.utils.CustomTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DEVELOPER SAMPLE LOCATIONS APP"
            android:textAlignment="center"
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            android:textColor="@color/locationvisitdate"
            android:textSize="12sp"
            android:layout_weight="0.1"
            customTextView:fontName="DroidSansMono"/>
    </LinearLayout>
</LinearLayout>